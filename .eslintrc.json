{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "settings": {
    "import/resolver": {
      "node": { "paths":  ["src"] }
    },
    "react": {
      "pragma": "React",
      "version": "16.8.0"
    }
  },
  "rules": {
    "no-bitwise": ["error", { "int32Hint": true }]
  }
}